{
    "comments": {
        "lineComment": "--",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "/*", "close": " */", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(TEST|test|SERVICE|service|ELEMENT|element|DEFINE|define|ENVIRONMENT|environment|INITIALIZATION|initialization|TERMINATION|termination)\\b",
            "end": "^\\s*(END|end)"
        }
    }
}